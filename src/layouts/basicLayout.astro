---
import "@styles/index.css"
import slug from "slug"
import { css } from "@styled-system/css"
import { flex } from "@styled-system/patterns"
import "@fontsource-variable/noto-sans"
import ThemeManager from "@components/ThemeManager.astro"
import ThemeSelect from "@components/ThemeSelect.astro"
import { ViewTransitions } from "astro:transitions"
import { getCollection } from "astro:content"

// (...)
const posts = await getCollection("blog", ({ data }) => {
  return data.offline !== true
})

const tags = [...new Set(posts.map((post) => post.data.categorias).flat())]
const tagsArray = tags.map((tag) => ({
  value: tag,
  slug: slug(tag),
}))
console.log(posts)
console.log(tagsArray)

const { title, description, url } = Astro.props
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <ThemeManager defaultTheme="auto" />
    <ViewTransitions />
  </head>

  <body
    class={flex({
      bgColor: "mainBg",
      maxW: "1000px",
      m: "0 auto",
      px: "20px",
      minH: "100vh",
      flexDirection: "column",
      h: "100%",
    })}
  >
    <header
      class={flex({
        flex: "none",
        py: "40px",
        justifyContent: "space-between",
        alignItems: "center",
        flexDirection: { base: "column", md: "row" },
      })}
    >
      <a
        class={css({
          w: { base: "100%", md: "450px", lg: "500px" },
          h: "headerHeight",
          bgImage: "logo",
          bgSize: "contain",
          bgRepeat: "no-repeat",
          bgPosition: "center",
        })}
        href="/"
      >
      </a>
      <div
        id="options"
        class={flex({
          alignItems: "center",
          textStyle: "headerAndFooter",
          color: "basicText",
          h: "headerHeight",
          mt: { base: "15px", md: "0px" },
        })}
      >
        <a
          class={css({
            mr: "20px",
          })}
          href="/sobre">sobre</a
        >
        <ThemeSelect />
      </div>
    </header>
    <main class={css({ flex: "1 0 auto" })}>
      <slot />
    </main>
    <footer
      class={flex({
        flex: "none",
        textStyle: "headerAndFooter",
        color: "basicText",
        justifyContent: "space-between",
        bgColor: "footerBg",
        p: "20px",
        borderTopRadius: "lg",
        "& a": {
          textDecoration: "underline",
        },
      })}
    >
      <div class={css({})}>
        <h1 class={css({ fontWeight: "bold" })}>categorias</h1>

        {
          tagsArray.map((tag) => (
            <p>
              <a href={`/categoria/${tag.slug}`}>{tag.value}</a>
            </p>
          ))
        }
      </div>
      <div class={css({ textAlign: "right" })}>
        <p>escrito por Dauro Veras (link para "sobre"?)</p>
        <p>
          desenvolvido por <a
            href="https://www.fabricioboppre.net"
            target="_blank">Fabricio C. Boppr√©</a
          >
        </p>
        <p>creative commons?</p>
        <p>RSS</p>
      </div>
    </footer>
  </body>
</html>
